 if(Input.GetKey(KeyCode.W) && Input.GetKey(KeyCode.LeftShift))
 
        {
            transform.Translate(0,(velocitaW+velocitaCorsa)*Time.deltaTime,0); 
        }
        //verso sinistra
        if(Input.GetKey(KeyCode.A) && Input.GetKey(KeyCode.LeftShift))
        {
            transform.Translate((-velocitaA-velocitaCorsa)*Time.deltaTime,0,0);
        }
        //verso il gi√π
        if(Input.GetKey(KeyCode.S) && Input.GetKey(KeyCode.LeftShift))
        {
            transform.Translate(0,(-velocitaS- velocitaCorsa)*Time.deltaTime,0);
        }
        //verso destra
        if(Input.GetKey(KeyCode.D) && Input.GetKey(KeyCode.LeftShift))
        {
            transform.Translate((velocitaD+ velocitaCorsa)*Time.deltaTime,0,0);
        }
